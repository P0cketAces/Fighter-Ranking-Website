<% if user_signed_in? %>
    <% if current_user.email == 'jnelson0112@gmail.com' %>
        <div class="container">
            <div class="row">
                <h3 class="text-center">Insert Fighter</h3>
                <br>
                
                <div class="col-md-4 col-md-offset-4">
                    <div class="well">
                        <%= form_for @fighter do |f| %>
                            <div class="form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name, class: "form-control" %>
                            </div>
                            
                            <div class="form-group">
                                <%= f.label :wins %>
                                <%= f.text_area :wins, class: "form-control" %>
                            </div>
                            
                            <div class="form-group">
                                <%= f.label :losses %>
                                <%= f.text_area :losses, class: "form-control" %>
                            </div>
                            
                            <div class="form-group">
                                <%= f.submit 'Submit', class: "btn btn-default" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    <% else %>
        <h2 class="text-center">Not the correct user</h2>
    <% end %>
<% else %>
    <h2 class="text-center">Not signed in as the correct user</h2>
<% end %>